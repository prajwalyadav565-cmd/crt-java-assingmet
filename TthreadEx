package LearningJava;
import java.util.Scanner;
class Addition extends Thread
{
	public void run()
	{
		System.out.println("additinal tasks");
		Scanner sc =new Scanner(System.in);
		System.out.println("first number:");
		int a=sc.nextInt();
		System.out.println("second number:");
		int b=sc.nextInt();
		
		int sum=a+b;
		System.out.println(sum);
	}
}
class Character extends Thread
{
	public void run()
	{
		System.out.println("character print:");
		for (int i=65;i<=75;i++)
		{
			
		System.out.println((char)i);
		}
		try
		{
			Thread.sleep(1000);
		}
		catch(Exception e)
		{
			e.printStackTrace();
			
		}
	}
	System.out.println("character print is complete");
}

class NumberPrinting extends Thread
{
	public void run()
	{
		System.out.println("character print:");
		for (int i=1;i<=10;i++)
		{
			
		System.out.println(i);
		}
		try
		{
			Thread.sleep(1000);
		}
		catch(Exception e)
		{
			e.printStackTrace();
			
		}
	}
	System.out.println(" number print is complete");
}
class TthreadEx
{
	public Static void main(String[] args)
	{
		Addition a=new Addition();
		Character c=new Character();
		NumberPrinting n=new NumberPrinting();
		a.start();
		c.start();
		n.start();
	}
	
}
